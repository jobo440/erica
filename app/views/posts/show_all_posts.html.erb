
<div id="page_wrapper">
	<div id="title"> All Posts </div>
	<div class="row">
		<div class="large-6 columns">
			<div id="title">Teacher Posts</div>
			<% @posts.reverse_each do |post| %>
				<% if post.section == 'teacher' %>
						<div class="content">
						<h1 class="title"><%= post.title %></h1>
						<p class="date">
							Submitted <%= time_ago_in_words(post.created_at) %> Ago
							| <%= link_to 'Edit', edit_post_path(post) %> |
							  <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
						</p>
						<p class="body"><%= post.body %></p>
						<h4>Date:</h4>
						<p><%= post.date %></p>

						<h4>Section:</h4>
						<p><%= post.section %></p>

						<h4>position</h4>
						<p><%= post.position %></p>
						</div>
					<% end %>
			<% end %>
		</div>
		<div class="large-6 columns">
			<div id="title">Parent Posts</div>
			<% @posts.reverse_each do |post| %>
				<% if post.section == 'parent' %>
						<div class="content">
						<h1 class="title"><%= post.title %></h1>
						<p class="date">
							Submitted <%= time_ago_in_words(post.created_at) %> Ago
							| <%= link_to 'Edit', edit_post_path(post) %> |
							  <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
						</p>
						<p class="body"><%= post.body %></p>
						<h4>Date:</h4>
						<p><%= post.date %></p>

						<h4>Section:</h4>
						<p><%= post.section %></p>

						<h4>position</h4>
						<p><%= post.position %></p>
						</div>
					<% end %>
			<% end %>			
		</div>
	</div>
</div>