<h1>New Post</h1>

<%= form_for @posts do |f| %>
	<%= f.label :title %><br>
	<%= f.text_field :title %><br>
	<br>
	<%= f.label :body %><br>
	<%= f.text_field :body %><br>
	<br>
	<%= f.label :date %><br>
	<%= f.text_field :date %><br>
	<br>
	<%= f.label :section %><br>
	<%= f.text_field :section %><br>
	<br>
	<%= f.label :order %><br>
	<%= f.text_field :order %><br>
	<br>
	<%= f.submit %>
<% end %>